{
    "compilerOptions": {
      "lib": ["es2021", "DOM"],
      "module": "commonjs",
      "target": "es5",
      "jsx": "react",
      "noUnusedLocals": true,
      "skipLibCheck": true,
      "allowJs": true,
      "skipDefaultLibCheck": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "types": ["node"]
    },
    "include": ["src/@types/**/*", "src/**/*.tsx", "src/**/*.ts"],
    "exclude": ["./public/", "./node_modules"]
  }
  